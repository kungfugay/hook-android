<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:fontFamily">@font/notosan_r</item>
    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/AppTexTitle.S16</item>
    </style>

    <style name="AppRoundedImg">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="AppTexTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="fontFamily">@font/notosan_r</item>

    </style>


    <style name="AppTexTitle.S16">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTexTitle.S16.Bold">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTexTitle.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="AppTextCaption.S12">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTextPrimary">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/notosan_r</item>
    </style>

    <style name="AppTextPrimary.S16">
        <item name="fontFamily">@font/notosan_r</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextPrimary.S14">
        <item name="fontFamily">@font/notosan_r</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>