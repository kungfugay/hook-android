<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toorbar_home"
        android:layout_width="0dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_appbar_logo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/ic_hook_black"
        app:layout_constraintBottom_toBottomOf="@id/toorbar_home"
        app:layout_constraintStart_toStartOf="@id/toorbar_home"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_appbar_setting"
        android:layout_width="28.5dp"
        android:layout_height="28.5dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/label_setting"
        android:src="@drawable/ic_setting"
        app:layout_constraintBottom_toBottomOf="@id/toorbar_home"
        app:layout_constraintEnd_toEndOf="@id/toorbar_home"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_tag_area"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toorbar_home" />

    <!--    요기에 태그 한개만 나온다함..-->
    <TextView
        android:id="@+id/tv_selected_tag"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:background="#F4F4F4"
        android:contentDescription="@string/description_select_tag"
        android:fontFamily="@font/notosan_r"
        android:text="#종합설계"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_tag_area"
        app:layout_constraintStart_toStartOf="@id/view_tag_area"
        app:layout_constraintTop_toTopOf="@id/view_tag_area" />

    <ImageView
        android:id="@+id/tv_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/description_select_tag"
        android:src="@drawable/ic_view_all"
        android:textColor="#8E8D93"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_tag_area"
        app:layout_constraintEnd_toEndOf="@id/view_tag_area"
        app:layout_constraintTop_toTopOf="@id/view_tag_area" />

    <TextView
        android:id="@+id/tv_recent_hooks"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/notosans_m"
        android:text="@string/label_recent_tag"
        android:textColor="@color/gray_300"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/tv_selected_tag"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_tag" />


    <!-- HomeFragment의 XML 레이아웃에 fragment_container 추가 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recent_hooks" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_url_hook_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_recent_hooks"
        tools:listitem="@layout/item_url_hook" />


</androidx.constraintlayout.widget.ConstraintLayout>