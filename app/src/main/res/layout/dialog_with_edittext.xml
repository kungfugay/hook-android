<!-- res/layout/tag_selection_dialog.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listViewTags"
        android:layout_width="375dp"
        android:layout_height="221dp"
        android:choiceMode="multipleChoice"
        android:listSelector="@android:color/transparent" />

    <EditText
        android:id="@+id/editTextNewTag"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="태그 입력"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/listViewTags" />

    <Button
        android:id="@+id/buttonAddTag"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="추가"
        app:layout_constraintStart_toEndOf="@id/editTextNewTag"
        app:layout_constraintTop_toTopOf="@id/editTextNewTag" />
</androidx.constraintlayout.widget.ConstraintLayout>
